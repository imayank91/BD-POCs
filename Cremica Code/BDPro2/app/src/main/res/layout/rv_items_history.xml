<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp">

    <LinearLayout
        android:id="@+id/call_details_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="80dp">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:src="@drawable/add"
                app:backgroundTint="#dfdfdf"
                app:fabSize="mini"

                />

            <RelativeLayout
                android:id="@+id/for_view_below"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/fab">

                <View
                    android:id="@+id/view_2"
                    android:layout_width="2dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="#BDBDBD"

                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/for_view_above"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/fab">

                <View
                    android:id="@+id/view_1"
                    android:layout_width="2dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="#BDBDBD"

                    />
            </RelativeLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/outgoing_call_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Outgoing Call"
                android:textColor="#212121"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/outgoing_call_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/outgoing_call_tag"
                android:layout_marginTop="10dp"
                android:text="DD/MM/YY, HH:MM"
                android:textColor="#212121"
                android:textStyle="bold" />


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>