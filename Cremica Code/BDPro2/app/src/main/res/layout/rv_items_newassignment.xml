<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_assignment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="0.5dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp">

        <LinearLayout
            android:id="@+id/tag_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/is_opened"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:src="@drawable/is_opened"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="5dp"/>


            <TextView
                android:id="@+id/assignment_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDXYZ"
                android:textColor="@color/assignment_text"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/bookmark_icon"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ribbon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/startdate_tag_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tag_layout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start : " />

            <TextView
                android:id="@+id/start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DD/MM/YY," />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/enddate_tag_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/startdate_tag_layout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End :   "

                />

            <TextView
                android:id="@+id/end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DD/MM/YY," />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/location_tag_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enddate_tag_layout"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="13dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/location_assignment" />

            <TextView
                android:id="@+id/address"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="Address Lorem Ipsum dolor walkie sit amet"
                android:textColor="#74aadc" />

        </LinearLayout>

        <ImageView

            android:id="@+id/next_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/next" />


    </RelativeLayout>


</android.support.v7.widget.CardView>