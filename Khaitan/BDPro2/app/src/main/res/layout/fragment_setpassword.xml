<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/label_to_enter_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:gravity="center"
        android:text="Your password should contain at least
        one upper case letter"
        android:textColor="#74aadc" />


    <LinearLayout
        android:id="@+id/newpassword_linearlayout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/newpassword_textview"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:text="New Password" />


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/newpassword_edittext"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edittext"
            android:cursorVisible="true"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/confirm_password_layout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/_textview"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:text="Confirm Password" />


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/confirmpassword_edittext"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edittext"
            android:cursorVisible="true"
            android:textSize="15sp" />

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</LinearLayout>